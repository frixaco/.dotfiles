[includeIf "gitdir:~/personal/"]
  path = ~/personal/.gitconfig-personal
[includeIf "gitdir:~/vbrato/"]
  path = ~/vbrato/.gitconfig-vbrato
[includeIf "gitdir:~/.dotfiles/"]
  path = ~/.dotfiles/.gitconfig-dotfiles

[core]
  editor = nvim
[diff]
  tool = nvimdiff
[difftool "nvimdiff"]
  cmd = nvim -d \"$LOCAL\" \"$REMOTE\"

[init]
	defaultBranch = main
